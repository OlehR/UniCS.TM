                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                            <Setter Property="FontSize" Value="20" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock
                           FontWeight="Bold"
                           Foreground="White" Text="{Binding WaresQuantity, StringFormat={}({0}), RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window} }">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorKSO">
                                            <Setter Property="FontSize" Value="28" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="VerticalMonitorKSO">
                                            <Setter Property="FontSize" Value="24" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                            <Setter Property="FontSize" Value="20" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button.Content>
                <Button.Style>
                    <Style BasedOn="{StaticResource greenButton}" TargetType="Button">
                        <Setter Property="IsEnabled" Value="True"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEnabledPaymentButton, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                <Setter Property="IsEnabled" Value="True" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsEnabledPaymentButton, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!--Фони для вікна-->
        <Border Background="GhostWhite"  BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="1" Grid.RowSpan="4"
                Grid.Column="0" Grid.ColumnSpan="4"
                 Name="Background" Visibility="Collapsed" Grid.ZIndex="1" 
                Opacity="0.9"/>

        <Border Background="GhostWhite"  BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="0" Grid.RowSpan="5"
                Grid.Column="0" Grid.ColumnSpan="4"
                 Name="ErrorBackground" Visibility="Collapsed" Grid.ZIndex="1" 
                Opacity="0.5"/>

        <!-- Вікно помилки   -->
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="0" Grid.RowSpan="6"
                Grid.Column="1" Grid.ColumnSpan="4"
                 Name="ErrorWindows" Visibility="Collapsed" Grid.ZIndex="6" 
                CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="15"/>
            </Border.Effect>

            <Grid  Width="700" Height="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Center">
                    <Image  Source="icons\warning.png" Width="50" Margin="15"/>
                    <TextBlock  HorizontalAlignment="Center" Foreground="Black" FontSize="28" Text="Виникла помилка!"/>
                    <TextBlock HorizontalAlignment="Center"  Margin="0,10,0,10" Name="ErrorText"
                                  FontSize="24" TextWrapping="Wrap" ></TextBlock>
                </StackPanel>
                <Button   FontSize="22" Click="ButtonOkErrorWin"  Grid.Row="1" Style="{StaticResource Default}"
                        Height="80" Width="300" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Image  Height="30" Width="30"  Source="icons\warning.png"></Image>
                        <TextBlock FontSize="28"  Text="ОК" Margin="5,0,0,5"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>


        <!--Початок покупки - стартове вікно ВІДЕО-->
        <Border Background="GhostWhite"  BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="0" Grid.RowSpan="5"
                Grid.Column="0" Grid.ColumnSpan="4"
                 Name="StartShopping" Visibility="Collapsed" Grid.ZIndex="2" >
            <Grid x:Name="MP">
                <Button Style="{StaticResource TransparentButton}" Click="StartBuy" Panel.ZIndex="3"/>

                <Button Margin="10,10,10,100"  Opacity="0.7" Style="{StaticResource StartButtun}"  FontSize="48" Click="StartBuy"  Grid.ZIndex="2"
                         Height="70" Width="500" VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <Image  Height="50" Width="50"  Source="icons\shoppingCart.png"></Image>
                        <TextBlock FontSize="50" Text="{DynamicResource startShopping}" FontFamily="Source Sans Pro"   Margin="5,10,5,0"/>
                    </StackPanel>
                </Button>

                <!--<Image Source="icons\VopakLogo.png" Height="500"/>-->
                <!--<MediaElement   Name="StartVideo" Source="icons\sparVideo.mp4" LoadedBehavior="Manual" Volume="0"   />-->

                <MediaElement Name="StartVideo" Volume="0" LoadedBehavior="Manual">
                    <MediaElement.Triggers>
                        <EventTrigger RoutedEvent="MediaElement.Loaded">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <MediaTimeline x:Name="VideoPlayer"  Source="icons/VopakLogo.png"
                                                       Storyboard.TargetName="StartVideo"  
                                                           RepeatBehavior="Forever" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </MediaElement.Triggers>
                </MediaElement>


            </Grid>
        </Border>

        <!--Початок покупки - стартове вікно Логотип-->
        <Border Background="GhostWhite"  BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="0" Grid.RowSpan="5"
                Grid.Column="0" Grid.ColumnSpan="4"
                 Name="StartShoppingLogo" Visibility="Collapsed" Grid.ZIndex="2" >
            <Grid >

                <Image x:Name="StartLogo"  Height="500"/>
                <Button Style="{StaticResource TransparentButton}" Click="StartBuy" Panel.ZIndex="3"/>
                <Button Margin="10,10,10,100"  Style="{StaticResource greenButton}"  FontSize="48" Click="StartBuy"  Grid.ZIndex="2"
                         Height="100" Width="500" VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <Image  Height="50" Width="50"  Source="icons\shoppingBag.png"></Image>
                        <TextBlock FontSize="50" Text="{DynamicResource startShopping}" FontFamily="Source Sans Pro" Foreground="White"  Margin="10,10,5,0"/>
                    </StackPanel>
                </Button>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center"  Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="Решта: " HorizontalAlignment="Center" FontSize="50" FontWeight="DemiBold"/>
                    <TextBlock Text="{Binding GiveRest, StringFormat=0.00₴, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}"  FontSize="50" FontWeight="DemiBold"/>

                </StackPanel>




            </Grid>
        </Border>

        <!-- Адмінка -->
        <uc:Admin_control Grid.Row="0" Grid.RowSpan="5" Visibility="Collapsed"
                              Grid.Column="0" Grid.ColumnSpan="4" 
                              x:Name="AdminControl" VerticalAlignment="Stretch" 
                              Grid.ZIndex="4" />
        <!--Вікно оплати звичайна каса-->
        <uc:PaymentWindow Grid.Row="0" Grid.RowSpan="5" Visibility="Collapsed"
                              Grid.Column="0" Grid.ColumnSpan="4" 
                              x:Name="PaymentWindow" VerticalAlignment="Stretch" 
                              Grid.ZIndex="2" />


    </Grid>

</Window>
