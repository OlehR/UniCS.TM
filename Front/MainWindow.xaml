                    <ColumnDefinition Width="105*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Foreground="Black" Text="{DynamicResource markWareName}" HorizontalAlignment="Left" FontWeight="Bold"/>
                <TextBlock Grid.Column="4" Foreground="Black" Text="{DynamicResource markWareQuantity}" Margin="100,0,0,0" HorizontalAlignment="Center" FontWeight="Bold" />
                <TextBlock Grid.Column="5" Foreground="Black" Text="{DynamicResource markWareWeight}"  Margin="10,0,0,0" FontWeight="Bold"/>
                <TextBlock Grid.Column="6" Foreground="Black" Text="{DynamicResource markWarePrice}"  Margin="10,0,0,0" FontWeight="Bold"/>
                -->
