<Window x:Class="Front.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
        xmlns:keyboard="clr-namespace:OnScreenKeyboardControl.Keyboard"
        xmlns:local="clr-namespace:Front" 
        xmlns:onScreenKeyboardControl="clr-namespace:OnScreenKeyboardControl"
        xmlns:uc="clr-namespace:Front.Control"        
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized"
        WindowStyle="None"
        Height="768" Width="1024"        
        >

    <!--xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"-->
    <!--Height="1080" Width="1920"-->
    <Window.DataContext>
        <onScreenKeyboardControl:ViewModel/>
    </Window.DataContext>
    <!---->
    <Window.Resources>
        <local:BoolToVisibilityConverter
         x:Key="BoolToHiddenConverter"
         TrueValue="Visible" FalseValue="Hidden" />
        <!--<Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>-->
        <Style TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsHorizontalScreen, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="False">
                    <Setter Property="FontSize" Value="20" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsHorizontalScreen, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                    <Setter Property="FontSize" Value="20" />
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Source Sans Pro" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="DemiBold" />

        </Style>
    </Window.Resources>



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition >
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="60"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorKSO">
                                <Setter Property="Height" Value="80" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="VerticalMonitorKSO">
                                <Setter Property="Height" Value="80" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                <Setter Property="Height" Value="60" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition Height="4"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="60"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorKSO">
                                <Setter Property="Height" Value="95" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="VerticalMonitorKSO">
                                <Setter Property="Height" Value="95" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                <Setter Property="Height" Value="60" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
        </Grid.RowDefinitions>
        <!-- цифрова клавіатура -->
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="0" Grid.RowSpan="6"
                 Grid.Column="0" Grid.ColumnSpan="6"
                 Name="NumericPad" Visibility="Collapsed" Grid.ZIndex="5" 
                CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="15"/>
            </Border.Effect>
            <uc:NumericPad x:Name="InputNumberPhone"   />
        </Border>

        <!--<DockPanel Grid.ColumnSpan="10" Grid.RowSpan="10">
            <wv2:WebView2  x:Name="WebView2"
                   Source="https://www.microsoft.com" 
   />
        </DockPanel>-->
        <Border Grid.Row="0" Margin="5" Background="White"  >

            <Grid  Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition >
                        <ColumnDefinition.Style>
                            <Style TargetType="ColumnDefinition">
                                <Setter Property="Width" Value="*"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorKSO">
                                        <Setter Property="Width" Value="*" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="VerticalMonitorKSO">
                                        <Setter Property="Width" Value="*" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                        <Setter Property="Width" Value="0.85*" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ColumnDefinition.Style>
                    </ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Бонуси клієнта-->
                <Grid  Grid.Column="0" x:Name="ShowClientBonus" Visibility="Collapsed">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" >
                        <Border   BorderBrush="gray" BorderThickness="1"  CornerRadius="15">
                            <StackPanel  Orientation="Horizontal" Margin="10,0,10,0"
                            VerticalAlignment="Center" HorizontalAlignment="Right"  >
                                <StackPanel >
                                    <TextBlock  FontSize="22" Text="Скарбничка: "/>
                                    <TextBlock  FontSize="22" Text="Сума бонусів: "/>
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0" >
                                    <TextBlock  FontSize="22" Foreground="DarkGreen" FontWeight="Bold" Text="{Binding Client.Wallet, StringFormat=0.00₴, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}"/>
                                    <TextBlock  FontSize="22" Foreground="DarkGreen" FontWeight="Bold" Text="{Binding Client.SumBonus, StringFormat=0.00, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Image Source="icons\ClientBonus.png"/>
                    </StackPanel>
                    <Button Click="ShowClientDetails"  Opacity="0" />

                </Grid>


                <!--Відкладення чеку-->
                <Grid  Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Button Grid.Column="0"  Click="IssueCardButton" Style="{StaticResource Default}">
                        <Button.Content>
                            <TextBlock FontSize="14" Text="Видача картки" Margin="5,0,0,5"/>
                        </Button.Content>
                    </Button>

                    <Button Grid.Column="1"  Click="PostponeCheck" Style="{StaticResource Default}">
                        <Button.Content>
                            <TextBlock FontSize="14" Text="Відкласти чек" Margin="5,0,0,5"/>
                        </Button.Content>
                    </Button>
                </Grid>


                <!--Мовна панель-->
                <StackPanel  x:Name="LanguagePanel" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Center" >
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Button x:Name="ua" Click="_ChangeLanguage" Grid.Column="1" Style="{StaticResource WhiteButton}"  Width="70">
                        <Image Margin="10" Source="icons\ua.png"/>
                    </Button>

                    <Button x:Name="en" Click="_ChangeLanguage" Grid.Column="2" Style="{StaticResource WhiteNotBorderButton}"  Width="70">
                        <Image Margin="10" Source="icons\uk.png"/>
                    </Button>

                    <Button x:Name="hu" Click="_ChangeLanguage" Grid.Row="3" Style="{StaticResource WhiteNotBorderButton}"  Width="70">
                        <Image Margin="10" Source="icons\hu.png"/>
                    </Button>

                    <Button x:Name="pl" Click="_ChangeLanguage" Grid.Column="4" Grid.Row="1" Style="{StaticResource WhiteNotBorderButton}" Width="70">
                        <Image Margin="10" Source="icons\pln.png"/>
                    </Button>
                    <Button Style="{StaticResource WhiteNotBorderButton}" Click="_VolumeButton"  >
                        <Image x:Name="ButtonImage">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Volume, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                            <Setter Property="Source" Value="icons\volume.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Volume, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                            <Setter Property="Source" Value="icons\no_volume.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Button>
                </StackPanel>

                <Button Style="{StaticResource Default}" Grid.Column="2" FontSize="30" Click="_ButtonHelp">

                    <StackPanel Orientation="Horizontal">
                        <TextBlock TextWrapping="Wrap" Text="{DynamicResource buttonHelp}">
                            <TextBlock.Style>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="FontSize" Value="20" />
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorKSO">
                                            <Setter Property="FontSize" Value="35" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="VerticalMonitorKSO">
                                            <Setter Property="FontSize" Value="24" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                            <Setter Property="FontSize" Value="20" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Image >
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Setter Property="Width" Value="30" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CS.IsProblem, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                            <Setter Property="Source" Value="icons\Scale.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CS.IsProblem, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                            <Setter Property="Source" Value="icons\help.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                            <Setter Property="Width" Value="30" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>

                    </StackPanel>
                </Button>





                <!--ВСЬОГО ДО ОПЛАТИ-->
                <!--<TextBlock Grid.Column="5" FontSize="22" Text="{DynamicResource markInAll}" 
                           Visibility="Visible" Name="textInAll" VerticalAlignment="Center" Foreground="Black" />
                <StackPanel Grid.Column="6" Orientation="Horizontal"
                           VerticalAlignment="Center"
                           Name="valueInAll" Visibility="Visible">
                    <TextBlock 
                           FontSize="28"
