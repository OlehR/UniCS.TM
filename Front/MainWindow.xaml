<Window x:Class="Front.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
        xmlns:keyboard="clr-namespace:OnScreenKeyboardControl.Keyboard"
        xmlns:local="clr-namespace:Front" 
        xmlns:onScreenKeyboardControl="clr-namespace:OnScreenKeyboardControl"
        xmlns:uc="clr-namespace:Front.Control"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowState="Maximized"
        WindowStyle="None"
        Height="768" Width="1024"        
        >
    <!--  -->
    <Window.DataContext>
        <onScreenKeyboardControl:ViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <local:BoolToVisibilityConverter
         x:Key="BoolToHiddenConverter"
         TrueValue="Visible" FalseValue="Hidden" />
        <Style TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsHorizontalScreen, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="False">
                    <Setter Property="FontSize" Value="20" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsHorizontalScreen, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                    <Setter Property="FontSize" Value="20" />
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Source Sans Pro" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="DemiBold" />
        </Style>
        <Style TargetType="Button" x:Key="RoundButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition >
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="60"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorKSO">
                                <Setter Property="Height" Value="80" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="VerticalMonitorKSO">
                                <Setter Property="Height" Value="80" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                <Setter Property="Height" Value="60" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition Height="4"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition>
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Setter Property="Height" Value="60"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorKSO">
                                <Setter Property="Height" Value="95" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="VerticalMonitorKSO">
                                <Setter Property="Height" Value="95" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                <Setter Property="Height" Value="60" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
        </Grid.RowDefinitions>
        <!-- цифрова клавіатура -->
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="0" Grid.RowSpan="6"
                 Grid.Column="0" Grid.ColumnSpan="6"
                 Name="NumericPad" Visibility="Collapsed" Grid.ZIndex="5" 
                CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="15"/>
            </Border.Effect>
            <uc:NumericPad x:Name="UC_NumericPad"   />
        </Border>



        <!--Верхня панель статусу-->
        <Border Grid.Row="0" Margin="5" Background="White"  >

            <Grid  Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition >
                        <ColumnDefinition.Style>
                            <Style TargetType="ColumnDefinition">
                                <Setter Property="Width" Value="*"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorKSO">
                                        <Setter Property="Width" Value="*" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="VerticalMonitorKSO">
                                        <Setter Property="Width" Value="*" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                        <Setter Property="Width" Value="0.85*" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ColumnDefinition.Style>
                    </ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--Бонуси клієнта-->
                <Grid  Grid.Column="0" x:Name="ShowClientBonus" Visibility="{Binding IsViewClientInfo, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" >
                        <Border   BorderBrush="gray" BorderThickness="1"  CornerRadius="15" >
                            <StackPanel  Orientation="Horizontal" Margin="10,0,10,0"
                            VerticalAlignment="Center" HorizontalAlignment="Right"  >
                                <StackPanel >
                                    <TextBlock  FontSize="22" Text="Скарбничка: ">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Setter Property="FontWeight" Value="DemiBold"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Client.StatusCard, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="Active">
                                                        <Setter Property="Foreground" Value="Black" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock  FontSize="22" Text="Сума бонусів: ">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Setter Property="FontWeight" Value="DemiBold"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Client.StatusCard, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="Active">
                                                        <Setter Property="Foreground" Value="Black" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0" >
                                    <TextBlock  FontSize="22"  FontWeight="Bold" Text="{Binding Client.Wallet, StringFormat=0.00₴, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Client.StatusCard, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="Active">
                                                        <Setter Property="Foreground" Value="DarkGreen" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock  FontSize="22"  FontWeight="Bold" Text="{Binding Client.SumMoneyBonus, StringFormat=0.00₴, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Client.StatusCard, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="Active">
                                                        <Setter Property="Foreground" Value="DarkGreen" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="icons\ClientBonusGray.png"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Client.StatusCard, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="Active">
                                            <Setter Property="Source" Value="icons\ClientBonus.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </StackPanel>
                    <Button Click="ShowClientDetails"  Opacity="0" />

                </Grid>

                <!--Відкладення чеку-->
                <Grid  Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Button Grid.Column="0"  Click="IssueCardButton"  Style="{StaticResource Default}">
                        <Button.Content>
                            <TextBlock FontSize="16" Text="Видача картки" Margin="5,0,0,5"/>
                        </Button.Content>
                    </Button>

                    <Button Grid.Column="1"  Click="PostponeCheck"  >
                        <Button.Content>
                            <TextBlock FontSize="16" Margin="5,0,0,5">
                                <TextBlock.Style>
                                    <Style  TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsReceiptPostponeNotNull, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                                <Setter Property="Background" Value="LightGray" />
                                                <Setter Property="Text" Value="Відкласти чек" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsReceiptPostponeNotNull, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                                <Setter Property="Background" Value="Red" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="Text" Value="ВІДНОВИТИ ЧЕК" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button.Content>
                        <Button.Style>
                            <Style  BasedOn="{StaticResource Default}" TargetType="Button">
                                <Setter Property="IsEnabled" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsReceiptPostpone, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>


                <!--Мовна панель-->
                <StackPanel  x:Name="LanguagePanel" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Center" >
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Button x:Name="ua" Click="_ChangeLanguage" Grid.Column="1" Style="{StaticResource WhiteButton}"  Width="70">
                        <Image Margin="10" Source="icons\ua.png"/>
                    </Button>

                    <Button x:Name="en" Click="_ChangeLanguage" Grid.Column="2" Style="{StaticResource WhiteNotBorderButton}"  Width="70">
                        <Image Margin="10" Source="icons\uk.png"/>
                    </Button>

                    <Button x:Name="hu" Click="_ChangeLanguage" Grid.Row="3" Style="{StaticResource WhiteNotBorderButton}"  Width="70">
                        <Image Margin="10" Source="icons\hu.png"/>
                    </Button>

                    <Button x:Name="pl" Click="_ChangeLanguage" Grid.Column="4" Grid.Row="1" Style="{StaticResource WhiteNotBorderButton}" Width="70">
                        <Image Margin="10" Source="icons\pln.png"/>
                    </Button>
                    <Button Style="{StaticResource WhiteNotBorderButton}" Click="_VolumeButton"  >
                        <Image x:Name="ButtonImage">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Volume, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                            <Setter Property="Source" Value="icons\volume.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Volume, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                            <Setter Property="Source" Value="icons\no_volume.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Button>
                </StackPanel>
                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" BorderBrush="Transparent" Click="ShowRemoteState" >
                        <Button.Style>
                            <Style BasedOn="{StaticResource RoundButton}" TargetType="Button">
                                <Setter Property="Background" Value="#419e08"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                    Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RemoteWorkplace.IdWorkplace, RelativeSource={RelativeSource 
                                    Mode=FindAncestor, AncestorType=Window}}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RemoteCheckout.StateMainWindows, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="BlockWeight">
                                        <Setter Property="Background" Value="Orange" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RemoteCheckout.StateMainWindows, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="WaitWeight">
                                        <Setter Property="Background" Value="Yellow" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RemoteCheckout.StateMainWindows, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="ProblemWeight">
                                        <Setter Property="Background" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RemoteCheckout.StateMainWindows, RelativeSource={RelativeSource 
                                    Mode=FindAncestor, AncestorType=Window}}" Value="WaitAdmin">
                                        <Setter Property="Background" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RemoteCheckout.StateMainWindows, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="WaitInputPrice">
                                        <Setter Property="Background" Value="Purple" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RemoteCheckout.StateMainWindows, RelativeSource={RelativeSource 
                                    Mode=FindAncestor, AncestorType=Window}}" Value="SyncFinishedSuccess">
                                        <Setter Property="Background" Value="#419e08" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Image Source="\icons\checkout.png" Margin="5"/>
                    </Button>

                    <Button Grid.Column="1" BorderBrush="Transparent"  Click="UpdateDB">
                        <Button.Style>
                            <Style BasedOn="{StaticResource RoundButton}" TargetType="Button">
                                <Setter Property="Background" Value="Orange"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                    Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="NotDefine">
                                        <Setter Property="Background" Value="Orange" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="StartedFullSync">
                                        <Setter Property="Background" Value="Yellow" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="ErrorDB">
                                        <Setter Property="Background" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                    Mode=FindAncestor, AncestorType=Window}}" Value="Error">
                                        <Setter Property="Background" Value="Red" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="SyncFinishedError">
                                        <Setter Property="Background" Value="Purple" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                    Mode=FindAncestor, AncestorType=Window}}" Value="SyncFinishedSuccess">
                                        <Setter Property="Background" Value="#419e08" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Image>
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Setter Property="Source" Value="\icons\OkColor.png" />
                                    <Setter Property="Margin" Value="5" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="StartedFullSync">
                                            <Setter Property="Source" Value="\icons\DatabaseUpdate.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="Error">
                                            <Setter Property="Source" Value="\icons\Error.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="ErrorDB">
                                            <Setter Property="Source" Value="\icons\Error.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DatabaseUpdateStatus, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="SyncFinishedSuccess">
                                            <Setter Property="Source" Value="\icons\OkColor.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Button>

                    <Button  FontSize="30" Click="_ButtonHelp" >
                        <Button.Style>
                            <Style BasedOn="{StaticResource Default}" TargetType="Button">
                                <Setter Property="Width" Value="auto" />
                                <Setter Property="Grid.ColumnSpan" Value="3" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
            Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                        <Setter Property="Grid.Column" Value="2" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="FontSize" Value="20" />
                                        <Setter Property="Text" Value="{DynamicResource buttonHelp}" />
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorKSO">
                                                <Setter Property="FontSize" Value="35" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="VerticalMonitorKSO">
                                                <Setter Property="FontSize" Value="24" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                                <Setter Property="FontSize" Value="20" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                    Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                                <Setter Property="Text" Value="" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Image >
                                <Image.Style>
                                    <Style TargetType="{x:Type Image}">
                                        <Setter Property="Margin" Value="5" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                    Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                                <Setter Property="Width" Value="30" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CS.IsProblem, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                                <Setter Property="Source" Value="icons\Scale.png" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CS.IsProblem, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                                <Setter Property="Source" Value="icons\help.png" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                                                <Setter Property="Width" Value="30" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsCashRegister, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                                <Setter Property="Source" Value="icons\AdminPanel.png" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                        </StackPanel>
                    </Button>
                </Grid>



            </Grid>
        </Border>

        <Border Grid.Row="1" Background="{Binding ExchangeRateBar, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}"></Border>


        <Grid Grid.Row="2" Grid.RowSpan="2" Panel.ZIndex="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <!--Основний грід товарів-->
                <ListView Name="WaresList"  
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListView">
                                        <Border Name="Border">
                                            <!--Фон товарів-->
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding GetBackgroundColor, RelativeSource={RelativeSource 
                     Mode=FindAncestor, AncestorType=Window}}" />
                                            </Border.Background>
                                            <Border.BorderBrush>
                                                <SolidColorBrush Color="{Binding GetBackgroundColor, RelativeSource={RelativeSource 
                     Mode=FindAncestor, AncestorType=Window}}" />
                                            </Border.BorderBrush>
                                            <ScrollViewer Style="{DynamicResource {x:Static GridView.GridViewScrollViewerStyleKey}}">
                                                <ItemsPresenter />
                                            </ScrollViewer>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Style>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn  Header="{DynamicResource markWareName}" Width="{Binding widthHeaderReceipt.WidthName, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left">
                                            <TextBlock Margin="0"   Text="{Binding GetStrWaresReceiptPromotion}" Visibility="{Binding IsReceiptPromotion,Converter={StaticResource BoolToHiddenConverter}}">
                                                <TextBlock.Style>
                                                    <Style TargetType="{x:Type TextBlock}">
                                                        <Setter Property="FontSize" Value="12"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorRegular">
                                                                <Setter Property="FontSize" Value="10" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
