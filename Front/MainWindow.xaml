                <TextBlock Grid.Column="8" Foreground="Black" Text="{DynamicResource markWareInAll}"  FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>-->


        <Border Grid.Row="1" Background="{Binding ExchangeRateBar, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}"></Border>

        <Grid Grid.Row="2" Grid.RowSpan="2" Panel.ZIndex="2">

            <ListView Name="WaresList" Background="{Binding GetBackgroundColor, RelativeSource={RelativeSource 
                     Mode=FindAncestor, AncestorType=Window}}" 
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.View>
                    <GridView>
                        <GridViewColumn  Header="{DynamicResource markWareName}" Width="{Binding widthHeaderReceipt.WidthName, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left">
                                        <TextBlock Margin="0"   Text="{Binding GetStrWaresReceiptPromotion}" Visibility="{Binding IsReceiptPromotion,Converter={StaticResource BoolToHiddenConverter}}">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorRegular">
                                                            <Setter Property="FontSize" Value="10" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Margin="0"   Text="{Binding NameWares}" TextWrapping="Wrap"  FontFamily="Roboto Condensed" FontWeight="DemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="FontSize" Value="35"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorRegular">
                                                            <Setter Property="FontSize" Value="24" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>


                        <GridViewColumn  Header=""  Width="{Binding widthHeaderReceipt.WidthWastebasket, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="Delete" Click="_Delete">
                                        <Button.Content>
                                            <Image  Margin="5"  Source="icons\delete.png"/>
                                        </Button.Content>
                                        <Button.Style>
                                            <Style BasedOn="{StaticResource WhiteButton}" TargetType="Button">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="MaxHeight" Value="90" />
                                                <Setter Property="MaxWidth" Value="90" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDel}" Value="True">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorRegular">
                                                        <Setter Property="MaxWidth" Value="55" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="VerticalMonitorKSO">
                                                        <Setter Property="MaxWidth" Value="70" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>



                        <GridViewColumn  Header="{DynamicResource markWareQuantity}" Width="{Binding widthHeaderReceipt.WidthCountWares, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="Minus" Click="BtnClickMinusPlus" Grid.Column="1">
                                            <Button.Content>
                                                <Image Margin="15"  Source="icons\minus.png">
                                                    <Image.Style>
                                                        <Style TargetType="{x:Type Image}">
                                                            <Setter Property="MaxWidth" Value="60" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorRegular">
                                                                    <Setter Property="MaxWidth" Value="20" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Image.Style>
                                                </Image>
                                            </Button.Content>
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource WhiteButton}" TargetType="Button">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="MaxWidth" Value="55" />
                                                    <Setter Property="MaxHeight" Value="55" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorRegular">
                                                            <Setter Property="MaxHeight" Value="55" />
                                                            <Setter Property="MaxWidth" Value="55" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="VerticalMonitorKSO">
                                                            <Setter Property="MaxWidth" Value="70" />
                                                            <Setter Property="MaxHeight" Value="70" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorKSO">
                                                            <Setter Property="MaxWidth" Value="90" />
                                                            <Setter Property="MaxHeight" Value="90" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsMinus}" Value="True">
                                                            <Setter Property="IsEnabled" Value="True"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ElementName=QuantityText, Path=Text}" Value="1">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Grid.Column="2" Background="Transparent" BorderBrush="Transparent"
                                            Click="_ChangeCountWares" >
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource WhiteNotBorderButton}" TargetType="Button">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                    <Setter Property="Width" Value="55" />
                                                    <Setter Property="Height" Value="55" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorRegular">
                                                            <Setter Property="Height" Value="55" />
                                                            <Setter Property="Width" Value="55" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="VerticalMonitorKSO">
                                                            <Setter Property="Width" Value="70" />
                                                            <Setter Property="Height" Value="70" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorKSO">
                                                            <Setter Property="Width" Value="90" />
                                                            <Setter Property="Height" Value="90" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsPlus}" Value="True">
                                                            <Setter Property="IsEnabled" Value="True" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsPlus}" Value="False">
                                                            <Setter Property="IsEnabled" Value="False" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsCheckReturn, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                                            <Setter Property="IsEnabled" Value="True" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>

                                            <TextBlock x:Name="QuantityText" Grid.Column="2">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Margin" Value="10"></Setter>
                                                        <Setter Property="FontSize" Value="35"></Setter>
                                                        <Setter Property="FontWeight" Value="Medium"></Setter>
                                                        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                        <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                                        <Setter Property="Text" Value="{Binding Quantity}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsWeight}" Value="True">
                                                                <Setter Property="Text" Value="1"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}" 
                                                                     Value="HorisontalMonitorRegular">
                                                                <Setter Property="FontSize" Value="24" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Button>

                                        <Button x:Name="Plus" Click="BtnClickMinusPlus" Grid.Column="3">
                                            <Button.Content>
                                                <Image Margin="15"  Source="icons\plus.png"></Image>
                                            </Button.Content>
                                            <Button.Style>
