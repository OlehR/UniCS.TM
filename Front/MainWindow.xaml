                                <TextBlock FontSize="14" TextWrapping="Wrap" Text="Відміна заокруглень та списань" Margin="5,0,0,5"/>
                            </Button>
                        </Grid>

                    </Border>
                </Grid>
            </Border>

            <!-- Підтвердження віку ПОПЕРЕДЖЕННЯ  -->
            <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="0" Grid.RowSpan="5"
                 Grid.Column="1" Grid.ColumnSpan="4"
                 Name="ConfirmAgeMessage" Visibility="Collapsed" Grid.ZIndex="2" 
                CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="15"/>
                </Border.Effect>

                <Grid  Width="700" Height="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Center">
                        <Image  Source="icons\18plus.png" Width="50" Margin="15"/>
                        <TextBlock  HorizontalAlignment="Center" FontSize="28" Text="{DynamicResource ConfirmAge }"/>
                        <TextBlock  HorizontalAlignment="Center" FontSize="28" Text="{DynamicResource WaitAdmin }"/>
                    </StackPanel>
                    <Button BorderBrush="Transparent" Background="Transparent" Width="50" Height="50" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                        Click="ButtonAdmin"/>
                    <Button Grid.Row="1" Style="{StaticResource Default}"  FontSize="22" Click="_Cancel" 
                        Height="80" Width="300" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <Image  Height="20" Width="20"  Source="icons\X.png"></Image>
                            <TextBlock FontSize="28" Text="{DynamicResource cancel}" Margin="5,0,0,5"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Підтвердити вік ТАК/НІ   -->
            <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="0" Grid.RowSpan="4"
                 Grid.Column="1" Grid.ColumnSpan="4"
                 Name="ConfirmAge" Visibility="Collapsed" Grid.ZIndex="2" 
                CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="15"/>
                </Border.Effect>

                <Grid  Width="700" Height="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2">
                        <Image  Source="icons\18plus.png" Width="50" Margin="15"/>
                        <TextBlock  HorizontalAlignment="Center" FontSize="28" Text="{DynamicResource ConfirmAgeYesOrNo }"/>
                    </StackPanel>
                    <Button Grid.Row="1" Grid.Column="0"
                        Style="{StaticResource greenButton}"  FontSize="22" Click="_Cancel" 
                        Height="60" Width="250" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="28" Text="{DynamicResource Yes}" Margin="5,0,0,5"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="1" Grid.Column="1"
                        Style="{StaticResource Default}"  FontSize="22" Click="_Cancel" 
                        Height="60" Width="250" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="28" Text="{DynamicResource No}" Margin="5,0,0,5"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            <!--кінець-->
        </Grid>

        <!--<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right"/>-->


        <Grid Grid.Row="4" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Style="{StaticResource yelowButton}" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" FontSize="22"   Click="_Back">
                <Image Margin="5" Source="icons\back.png"/>
            </Button>
            <Button  Style="{StaticResource Default}" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" FontSize="22" Click="_Search">
                <TextBlock FontSize="28" Text="{DynamicResource search}"/>
            </Button>
            <Button Style="{StaticResource Default}" Grid.Column="2" FontSize="22" Click="_OwnBag">
                <TextBlock FontSize="14" Text="{DynamicResource ownBag}"/>
            </Button>
            <Button  Style="{StaticResource yelowButton}" Grid.Column="2" Grid.Row="2" FontSize="22" Click="_BuyBag">
                <TextBlock FontSize="14" Text="{DynamicResource buyBag}"/>
            </Button>
            <Button  Grid.Column="3"  Grid.Row="0" Grid.RowSpan="2" FontSize="22" Click="_ButtonPayment">
                <TextBlock FontSize="28" Text="{DynamicResource payment}"/>
                <Button.Style>
                    <Style BasedOn="{StaticResource greenButton}" TargetType="Button">
                        <Setter Property="IsEnabled" Value="True"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PriceIsNotZero, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="True">
                                <Setter Property="IsEnabled" Value="True" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding PriceIsNotZero, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="False">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>




        <Border Background="GhostWhite"  BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="1" Grid.RowSpan="3"
                Grid.Column="0" Grid.ColumnSpan="4"
                 Name="Background" Visibility="Collapsed" Grid.ZIndex="1" 
                Opacity="0.9"/>



        <!--Початок покупки - стартове вікно-->
        <Border Background="GhostWhite"  BorderBrush="Gainsboro" BorderThickness="1"
                 Grid.Row="1" Grid.RowSpan="4"
                Grid.Column="0" Grid.ColumnSpan="4"
                 Name="StartShopping" Visibility="Collapsed" Grid.ZIndex="2" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <TextBlock TextWrapping="Wrap"   
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="36" 
                                Grid.Column="0"  Grid.Row="0" Grid.RowSpan="2">
                    Доброго дня, ласкаво просимо до нашого магазину
                </TextBlock>
                <Button Grid.Row="2" Grid.Column="0"  Style="{StaticResource greenButton}"  FontSize="48" Click="_Cancel" 
                        Margin="5,20,5,20">
                    <StackPanel Orientation="Horizontal">
                        <Image  Height="40" Width="40"  Source="icons\shoppingBag.png"></Image>
                        <TextBlock FontSize="34" Text="{DynamicResource startShopping}" Margin="5,0,0,5"/>
                    </StackPanel>
                </Button>
                <Button Grid.Row="3" Grid.Column="0"  Style="{StaticResource greenButton}"  FontSize="48" Click="_Cancel" 
                          Margin="5,20,5,20">
                    <StackPanel Orientation="Horizontal">
                        <Image  Height="40" Width="40"  Source="icons\shoppingBag.png"></Image>
                        <TextBlock FontSize="34" Text="{DynamicResource buyBag}" Margin="5,0,0,5"/>
                    </StackPanel>
                </Button>
                <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="2" >
                    <!--<MediaElement   Name="StartVideo" Source="icons\sparVideo.mp4" LoadedBehavior="Manual" Volume="0"   />-->
                    <MediaElement Name="StartVideo" Volume="0" LoadedBehavior="Manual">
                        <MediaElement.Triggers>
                            <EventTrigger RoutedEvent="MediaElement.Loaded">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <MediaTimeline Source="icons\sparVideo.mp4" Storyboard.TargetName="StartVideo"  
                                                           RepeatBehavior="Forever" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>
                        </MediaElement.Triggers>
                    </MediaElement>
                </Grid>

            </Grid>
        </Border>
    </Grid>

</Window>
