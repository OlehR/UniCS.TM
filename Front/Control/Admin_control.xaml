                                                <TextBlock Text="{Binding Path=SUM, StringFormat=0.00}" TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <ScrollViewer Grid.Row="1"  Grid.Column="1">
                            <TextBlock x:Name="JornalText" FontSize="20" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="Помилки">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="7*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1"
                            CornerRadius="10" Margin="5,0,5,0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="15"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Пошук:"/>
                                <TextBox FontSize="25"  VerticalAlignment="Center" Width="400" TextChanged="FindFogTextChanged"/>
                            </StackPanel>
                        </Border>


                        <ListBox Grid.Row="1"  Name="ListLog" HorizontalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border  BorderBrush="Silver" BorderThickness="0,0,0,1" >
                                        <StackPanel>
                                            <TextBlock Grid.Column="0" Text="{Binding LineLog}" FontWeight="Bold" FontSize="18" TextWrapping="Wrap"
                                                   Width="{Binding ActualWidth,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollContentPresenter}}}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <Border Grid.Row="2"  >
                            <StackPanel  Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Center">
                                <RadioButton GroupName="Log" FontSize="20" Style="{DynamicResource OrangeSwitchStyle}" Content="Full" Checked="CheckTypeLog"/>
                                <RadioButton GroupName="Log" FontSize="20" Style="{DynamicResource OrangeSwitchStyle}" Content="Expanded" Checked="CheckTypeLog"/>
                                <RadioButton GroupName="Log"  FontSize="20" Style="{DynamicResource OrangeSwitchStyle}" Content="Error" Checked="CheckTypeLog"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>
                <!--ВИДИМІСТЬ АПІ API Visibility="Collapsed" -->
                <TabItem Header="API" Visibility="Collapsed"> 
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Top">
                            <ItemsControl Grid.Row="0" Name="ListRadioButtonAPI">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                        <RadioButton GroupName="TypeMessage"  FontSize="20" Checked="CheckTypeMessage" 
                                                     Style="{DynamicResource OrangeSwitchStyle}"/>
                                            <TextBlock Text="{Binding TranslateServerTypeMessage}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBox  FontSize="28" Margin="15" FontWeight="SemiBold" Name="APITextMessage"/>
                            <Button Content="Відправити" Style="{StaticResource Default}" Click="SetdAPIMessage"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">

                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">

                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Вихід"/>
            </TabControl>
            <!--<Button Grid.Row="1" x:Name="Exit" Style="{StaticResource Default}" Content="Вихід" Height="70" Width="110" Margin="0, 15,20,0"  HorizontalAlignment="Right" VerticalAlignment="Top"  Click="Exit_Click"/>-->

        </Grid>
    </Border>
</UserControl>
