<UserControl x:Class="Front.Control.TypePaymentInKSO"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Front.Control"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Source Sans Pro" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding TypeMonitor, RelativeSource={RelativeSource 
                                   Mode=FindAncestor, AncestorType=Window}}" Value="HorisontalMonitorRegular">
                    <Setter Property="FontSize" Value="18" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1"
            Grid.Row="0" Grid.RowSpan="4"
            Grid.Column="1" Grid.ColumnSpan="4"
            Visibility="Visible" Grid.ZIndex="2" 
            CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="15"/>
        </Border.Effect>
        <Grid>
            <Grid  Width="700" Height="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2">
                    <Image  Source="\icons\TypePayment.png" Width="100" Margin="15"/>
                    <TextBlock  HorizontalAlignment="Center" FontSize="28" Text="Оберіть тип оплати!"/>
                </StackPanel>

                <Button Grid.Row="1" Grid.Column="0" x:Name="Cash"
                        Style="{StaticResource greenButton}"  FontSize="22" 
                        Height="80" Width="250" 
                        Click="ChangeTypePayment">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="\icons\Cash.png" Width="50" Height="50"/>
                        <TextBlock FontSize="28" Text="Готівка" Foreground="White" Margin="5,0,0,5"/>
                    </StackPanel>
                </Button>
                <Button Grid.Row="1" Grid.Column="1" x:Name="Terminal"
                        Style="{StaticResource greenButton}"  FontSize="22" 
                        Height="80" Width="250"
                        Click="ChangeTypePayment">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="\icons\newPaymentTerminal.png" Width="50" Height="50"/>
                        <TextBlock FontSize="28" Text="Карта" Foreground="White" Margin="5,0,0,5"/>
                    </StackPanel>
                </Button>

            </Grid>



        </Grid>
    </Border>
</UserControl>
